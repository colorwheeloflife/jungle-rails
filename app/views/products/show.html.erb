<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
    <div class="review-row">

      <%= form_for([@review]) do |f| %>
        <p>
          <%= f.label :rating %>
          <%= f.select :rating, (0..5) %>
        </p>
        <p>
          <%= f.label :description %>
          <%= f.text_area :description %>
        </p>
        <p>
          <%= f.submit %>
          <%= f.hidden_field :product_id, :value => @product.id %>
        </p>
      <% end %>

      <dl class="dl-horizontal">
        <% @product.reviews.reverse_each do |review| %>
        <dt><strong> Review </strong></dt>
        <dd><%= review.description %></dd>
        <dt><strong> Rating </strong></dt>
        <dd><%= review.rating %></dd>

        <dt>Me # <%= current_user.id %> </d>
        <dt>User # <%= review.user_id %> </d>

        <% if current_user.id == review.user_id %>
          <dt> Statement BONGO MONGO </dt>
          <%= button_to "delete", {:controller => :reviews,
                                    :action => 'destroy', :id => review.id }, :method => :delete %>
        <% end %>



      <% end %>

    </div>


    <% else %>

      <div>
        <dl class="dl-horizontal">
        <% @product.reviews.reverse_each do |review| %>
        <dt><strong> Review </strong></dt>
        <dd><%= review.description %></dd>
        <dt><strong> Rating </strong></dt>
        <dd><%= review.rating %></dd>

        <% end %>
      </div>
    <% end %>
  </article>

</section>
